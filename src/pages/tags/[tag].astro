---
// Import statements
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPost from '../../components/BlogPost.astro';

export async function getStaticPaths() {
  const allPosts = await Astro.glob<BlogPostFrontMatter>('../posts/*.md');

  const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.frontmatter.tags.includes(tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

// Extract tag and posts from Astro global
const { tag } = Astro.params;
const { posts } = Astro.props;
---

<!-- HTML and component structure -->
<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {posts.map((post: Post) => <BlogPost key={post.url} url={post.url} title={post.frontmatter.title} />)}
  </ul>
</BaseLayout>
